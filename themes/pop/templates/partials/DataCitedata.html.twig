<!-- ====== This is the DataCite registration metadata ======== -->
<!-- This piece of code gets called (and can be turned off after the registration process is done) in default.html.twig just above the 
footer. -->
<!-- Still to be handled: 
- first and last names
 -->
<?xml version="1.0" encoding="UTF-8"?>
<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://datacite.org/schema/kernel-4" xsi:schemaLocation="http://datacite.org/schema/kernel-4 http://schema.datacite.org/meta/kernel-4.3/metadata.xsd">
    <identifier identifierType="DOI">{{header.doi}}</identifier>
    <creators>
{% for au in header.author %}
        <creator>
            <creatorName nameType="Personal">{{ au.name|e('html') }}</creatorName>
            {% if au.orcid %}<nameIdentifier schemeURI="http://orcid.org/" nameIdentifierScheme="ORCID">{{ au.orcid|e('html') }}</nameIdentifier>{% endif %}

        </creator>
{% endfor %}
    </creators>
    <titles>
        <title xml:lang="en-US">{{header.title}}</title>
{% if header.subtitle %}        <title xml:lang="en-US" titleType="Subtitle">{{header.subtitle}}</title> {% endif %}

    </titles>
    <publisher xml:lang="en">Pop! Public. Open. Participatory.</publisher>
    <publicationYear>2020</publicationYear>
    <language>en-US</language>
    <resourceType resourceTypeGeneral="Text">Journal Article</resourceType>
    <formats>
        <format>text/html</format>
    </formats>
</resource>







