{% extends 'partials/base.html.twig' %}


{% block header %}
	{% include 'partials/header.html.twig' %}
	{% include 'partials/breadcrumbs.html.twig' %}
{% endblock %}




{% block content %}

{% if array_key_exists('deck', header) %} <div class="deck">{{ header.deck|e('html') }}</div>{% endif %}

<h1 class="title">{{ header.title|e('html') }}</h1>
{% if array_key_exists('subtitle', header) %} <h1 class="subtitle">{{ header.subtitle|e('html') }}</h1>{% endif %}

<div class="pure-g" id="authordate">  

  <div class="pure-u-1 pure-u-md-3-4">

     {% for au in header.author %}
         <div class="authorblock  pure-u-1 pure-u-md-7-24">
            <p class="author"><span>{{ au.name|e('html') }}&nbsp;</span></p>

            <p class="authoraffil">{% if array_key_exists('affil', au) %} {{ au.affil|e('html') }}{% endif %}</p>

            <p class="authoremail">{% if array_key_exists('email', au) %} {{ au.email|e('html') }}</i>{% endif %}</p>
         </div>
      {% endfor %}
    </div>

    <div class="pure-u-1 pure-u-md-1-4">

   <p class="pubdate"><span>{{ header.date|date("F d, Y") }}&nbsp;</span></p>

    </div>  
  </div> 

<div class="pure-g" id="maincontent">  

  <div class="pure-u-1 pure-u-md-3-4">
  <section class="articlecontent">
    {{ page.content }}
  </section>
  </div>

  <div class="pure-u-1 pure-u-md-1-4">
    <div class="metadata-block">

  
      <p class="metahead"><span>Citation:&nbsp;</span></p>
      <p>
      {% for au in header.author %}{{ au.name|e('html') }}, {% endfor %}{{header.date|date("Y")}}. "{{header.title}}{% if header.subtitle %}: {{header.subtitle}}{% endif %}." <i>Pop! Public. Open. Participatory.</i> no. {{page.parent.header.issuenum}} ({{page.parent.header.pubdate|date("Y-m-d")}}). {{base_url_absolute}}{{page.url}}
      </p>
 
       {% if array_key_exists('abstract', header) %}<p class="metahead"><span>Abstract:&nbsp;</span></p><p>{{ header.abstract|e('html') }}</p>{% endif %}
   </div>
  </div>

</div>
{% endblock %}


{% block footer %}
    {% include 'partials/footer.html.twig' %}
{% endblock %}
